/** Background with subtle gradient and grain effects */
---
<div aria-hidden="true" class="fixed inset-0 z-0 pointer-events-none bg-[var(--color-bg)] bg-gradient-to-br from-[var(--color-bg)] via-[var(--color-bg)] to-[color-mix(in_srgb,var(--color-bg)_95%,var(--color-accent)_5%)]">
  <!-- Subtle grain texture overlay -->
  <div class="absolute inset-0 opacity-[0.02] dark:opacity-[0.03] bg-[url('data:image/svg+xml;base64,')]"></div>
</div>
