---
export interface Props {
  testimonials: Array<{
    id: string;
    name: string;
    role: string;
    company: string;
    avatar?: string;
    content: string;
    project?: string;
    results?: string;
  }>;
}

const { testimonials } = Astro.props;

const first = testimonials[0];
const second = testimonials[1];
const others = testimonials.slice(2);

const primary = second ?? first;
const secondary = first ?? second;
const [tertiary, quaternary] = others;
---

<section class="testimonials-bento">
  <div class="bento-grid scroll-reveal">
    {primary && (
      <article class="bento-card card-primary scroll-reveal-item">
        <header class="card-header">
          <div class="client-meta primary">
            <div>
              <h3 class="client-name">{primary.name}</h3>
              <p class="client-company">{primary.company}</p>
            </div>
          </div>
        </header>
        <blockquote>
          “{primary.content}”
        </blockquote>
      </article>
    )}

    {secondary && (
      <article class="bento-card card-secondary scroll-reveal-item scroll-reveal-delay-1">
        <header class="card-header compact">
          <div class="client-meta secondary">
            <div>
              <h4 class="client-name">{secondary.name}</h4>
              <p class="client-company">{secondary.company}</p>
            </div>
          </div>
        </header>
        <div class="card-body">
          <p class="lede">“{secondary.content}”</p>
        </div>
      </article>
    )}

    {tertiary && (
      <article class="bento-card card-tertiary scroll-reveal-item scroll-reveal-delay-2">
        <header class="mini-header">
          <div class="client-meta tertiary">
            <div>
              <h5 class="client-name">{tertiary.name}</h5>
              <p class="client-company">{tertiary.company}</p>
            </div>
          </div>
        </header>
        <p class="quote">“{tertiary.content}”</p>
      </article>
    )}

    {quaternary && (
      <article class="bento-card card-quaternary scroll-reveal-item scroll-reveal-delay-3">
        <header class="mini-header">
          <div class="client-meta tertiary">
            <div>
              <h5 class="client-name">{quaternary.name}</h5>
              <p class="client-company">{quaternary.company}</p>
            </div>
          </div>
        </header>
        <p class="quote">“{quaternary.content}”</p>
      </article>
    )}
  </div>
</section>

<style>
  .testimonials-bento {
    width: 100%;
  }

  .bento-grid {
    display: grid;
    gap: 1.25rem;
    grid-template-columns: repeat(12, minmax(0, 1fr));
    grid-auto-rows: minmax(190px, auto);
  }

  .bento-card {
    position: relative;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    gap: 1.15rem;
    padding: 1.6rem;
    border-radius: 1rem;
    background: var(--card-bg);
    border: 1px solid color-mix(in srgb, var(--color-border) 80%, transparent);
    box-shadow: 0 16px 36px -28px rgba(14, 51, 87, 0.35);
    backdrop-filter: blur(10px);
    overflow: hidden;
  }

  .card-primary {
    grid-column: 1 / span 7;
    grid-row: 1 / span 1;
    min-height: 300px;
  }

  .card-secondary {
    grid-column: 8 / span 5;
    grid-row: 1 / span 1;
    min-height: 260px;
  }

  .card-tertiary {
    grid-column: 1 / span 4;
    grid-row: 2 / span 1;
  }

  .card-tertiary .quote {
    font-size: clamp(0.88rem, 0.6vw + 0.72rem, 1rem);
    line-height: 1.5;
  }

  .card-quaternary {
    grid-column: 5 / span 8;
    grid-row: 2 / span 1;
  }

  .card-quaternary .quote {
    font-size: clamp(1.05rem, 0.85vw + 0.85rem, 1.32rem);
    line-height: 1.62;
  }

  .card-header {
    display: flex;
    flex-direction: column;
    gap: 1.25rem;
  }

  .card-header.compact {
    gap: 0.6rem;
  }

  .card-label {
    font-size: 0.75rem;
    letter-spacing: 0.12em;
    text-transform: uppercase;
    color: color-mix(in srgb, var(--color-text) 60%, transparent);
  }

  .card-label.subtle {
    color: color-mix(in srgb, var(--color-muted) 70%, transparent);
  }

  .client-meta {
    display: flex;
    align-items: center;
    gap: 1.05rem;
  }

  .client-meta.primary {
    align-items: flex-start;
  }

  .client-meta.secondary {
    align-items: flex-start;
    gap: 1rem;
  }

  .avatar-ring {
    width: 56px;
    height: 56px;
    color: var(--color-link);
  }

  .client-name {
    margin: 0;
    font-size: clamp(1.25rem, 0.85vw + 0.98rem, 1.7rem);
    font-weight: 700;
    letter-spacing: -0.015em;
    color: var(--color-heading);
  }

  .client-company {
    margin: 0.35rem 0 0;
    font-size: clamp(0.95rem, 0.35vw + 0.8rem, 1.1rem);
    font-weight: 500;
    color: color-mix(in srgb, var(--color-muted) 74%, transparent);
  }

  blockquote {
    margin: 0;
    font-size: clamp(1.05rem, 1.05vw + 0.85rem, 1.45rem);
    line-height: 1.55;
    color: var(--color-text);
    display: -webkit-box;
    -webkit-line-clamp: 5;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  .card-primary blockquote {
    font-size: clamp(0.98rem, 0.9vw + 0.82rem, 1.28rem);
    line-height: 1.58;
    -webkit-line-clamp: unset;
    overflow: visible;
  }

  .card-footer {
    display: flex;
    gap: 0.75rem;
    flex-wrap: wrap;
  }

  .badge {
    display: inline-flex;
    align-items: center;
    gap: 0.35rem;
    border-radius: 999px;
    padding: 0.4rem 0.85rem;
    font-size: 0.72rem;
    font-weight: 600;
    letter-spacing: 0.02em;
    border: 1px solid transparent;
  }

  .badge-primary {
    background: rgba(14, 51, 87, 0.12);
    color: color-mix(in srgb, var(--color-link) 85%, white 15%);
    border-color: rgba(14, 51, 87, 0.15);
  }

  .badge-muted {
    background: rgba(16, 185, 129, 0.12);
    color: rgba(16, 185, 129, 0.95);
    border-color: rgba(16, 185, 129, 0.2);
  }

  .card-body {
    display: flex;
    flex-direction: column;
    gap: 1.25rem;
  }

  .lede {
    margin: 0;
    font-size: clamp(0.98rem, 0.75vw + 0.8rem, 1.2rem);
    color: var(--color-text);
    line-height: 1.65;
    display: -webkit-box;
    -webkit-line-clamp: 4;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  .card-secondary .lede {
    font-size: clamp(1.08rem, 1vw + 0.86rem, 1.36rem);
    line-height: 1.6;
    -webkit-line-clamp: unset;
    overflow: visible;
  }

  .stat-pill {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.6rem 0.9rem;
    border-radius: 999px;
    background: rgba(16, 185, 129, 0.1);
    color: rgba(16, 185, 129, 0.95);
    font-weight: 600;
    font-size: 0.85rem;
  }

  .stat-pill svg {
    width: 18px;
    height: 18px;
  }

  .mini-header {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    gap: 1rem;
  }

  .quote {
    margin: 0;
    color: color-mix(in srgb, var(--color-text) 90%, transparent);
    font-size: 0.98rem;
    line-height: 1.55;
    display: -webkit-box;
    -webkit-line-clamp: 4;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  @media (max-width: 1100px) {
    .bento-grid {
      grid-template-columns: repeat(6, minmax(0, 1fr));
    }

    .card-primary {
      grid-column: 1 / span 6;
    }

    .card-secondary {
      grid-column: 7 / span 6;
    }

    .card-tertiary {
      grid-column: 1 / span 6;
    }

    .card-quaternary {
      grid-column: 7 / span 6;
    }
  }

  @media (max-width: 768px) {
    .bento-grid {
      grid-template-columns: repeat(1, minmax(0, 1fr));
      grid-auto-rows: auto;
    }

    .bento-card {
      padding: 1.75rem;
    }

    .card-primary,
    .card-secondary,
    .card-tertiary,
    .card-quaternary {
      grid-column: auto;
      grid-row: auto;
    }

    .mini-header {
      flex-direction: column;
      align-items: flex-start;
    }
  }
</style>

