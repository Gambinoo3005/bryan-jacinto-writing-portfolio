  <script>
    const initHeroGsap = async () => {
      const hero = document.querySelector('[data-hero]');
      if (!hero) return;

      const prefersReducedMotion = window.matchMedia('(prefers-reduced-motion: reduce)');
      if (prefersReducedMotion.matches) {
        hero.querySelectorAll('[data-hero-animate], [data-hero-roles] li').forEach((el) => {
          el.style.opacity = '1';
          el.style.transform = 'none';
        });
        return;
      }

      try {
        const [{ gsap }, { ScrollTrigger }] = await Promise.all([
          import('gsap'),
          import('gsap/ScrollTrigger'),
        ]);

        gsap.registerPlugin(ScrollTrigger);

        const heroTitle = hero.querySelector('[data-hero-title]');
        const roleItems = hero.querySelectorAll('[data-hero-roles] li');
        const heroText = hero.querySelector('[data-hero-text]');
        const heroCtas = hero.querySelectorAll('[data-hero-cta]');
        const heroImage = hero.querySelector('[data-hero-image]');
        const animatedNodes = hero.querySelectorAll('[data-hero-animate]');

        gsap.set(animatedNodes, { opacity: 0, y: 40 });
        gsap.set(roleItems, { opacity: 0, y: 24 });
        if (heroImage) {
          gsap.set(heroImage, { opacity: 0, y: 60, rotate: -4 });
        }

        const tl = gsap.timeline({
          defaults: { ease: 'power3.out' },
          scrollTrigger: {
            trigger: hero,
            start: 'top 80%',
            once: true,
          },
        });

        if (heroTitle) {
          tl.to(heroTitle, { opacity: 1, y: 0, duration: 0.9 });
        }

        if (roleItems.length) {
          tl.to(roleItems, {
            opacity: 1,
            y: 0,
            duration: 0.6,
            stagger: 0.08,
          }, '-=0.6');
        }

        if (heroText) {
          tl.to(heroText, { opacity: 1, y: 0, duration: 0.7 }, roleItems.length ? '-=0.4' : '-=0.5');
        }

        if (heroCtas.length) {
          tl.to(heroCtas, {
            opacity: 1,
            y: 0,
            duration: 0.6,
            stagger: 0.12,
          }, '-=0.45');
        }

        if (heroImage) {
          const addAt = heroCtas.length ? '-=0.55' : '-=0.45';
          tl.to(heroImage, { opacity: 1, y: 0, rotate: 0, duration: 1, ease: 'elastic.out(1, 0.75)' }, addAt);
        }
      } catch (error) {
        console.warn('Hero animation failed to load GSAP', error);
        hero.querySelectorAll('[data-hero-animate], [data-hero-roles] li').forEach((el) => {
          el.style.opacity = '1';
          el.style.transform = 'none';
        });
      }
    };

    if (document.readyState === 'loading') {
      document.addEventListener('DOMContentLoaded', initHeroGsap, { once: true });
    } else {
      initHeroGsap();
    }
  </script>

