---
import BaseLayout from "../layouts/BaseLayout.astro";

const roles = [
  "Copywriter",
  "Copyeditor",
  "B2B Content Writer",
  "SEO Content Writer",
];
---

<BaseLayout
  title="Bryan Jacinto - Copy & SEO"
  description="Copywriting, editing, B2B content, and SEO-focused writing."
>
  <section class="min-h-[70vh] grid place-items-center py-16 text-[var(--color-text)]">
    <div class="mx-auto max-w-3xl px-5 text-center">
      <!-- Name (subtle neutral gradient) -->
      <h1 class="text-4xl sm:text-5xl md:text-6xl font-black tracking-tight leading-tight">
        <span
          class="text-transparent bg-clip-text bg-gradient-to-r
                 from-[#0E3357] to-[#0A5CFF]
                 dark:from-[#86B7FF] dark:to-[#E8EDF7]"
        >
          Bryan Jacinto
        </span>
      </h1>

      <!-- Roles as refined chips -->
      <ul class="mt-4 flex flex-wrap items-center justify-center gap-2.5">
        {roles.map((r) => (
          <li
            class="inline-flex items-center gap-2 rounded-md
                   px-3.5 py-1.5
                   text-[12.5px] sm:text-[13px] font-medium tracking-tight
                   text-[var(--color-text)]
                   bg-[var(--surface-glass)]
                   border border-[var(--color-border)]
                   ring-1 ring-[#0E335733] dark:ring-[#86B7FF2D]
                   shadow-sm hover:shadow transition
                   hover:-translate-y-0.5"
          >
            <span class="h-1.5 w-1.5 rounded-full bg-current/50"></span>
            {r}
          </li>
        ))}
      </ul>

      <!-- Compact blurb -->
      <p class="mt-5 text-[15px] sm:text-base md:text-[17px] leading-relaxed text-[var(--color-muted)] mx-auto max-w-2xl">
        I'm a copywriter with 7 years of experience serving global clients. I focus on clarity and search-SEO articles, blog posts, landing pages, and B2B/B2C marketing content. Flexible voice, quick to adapt. Currently freelancing and open to full-time roles.
      </p>

      <!-- CTAs -->
      <div class="mt-7 flex items-center justify-center gap-3">
        <a
          href="/work"
          class="inline-flex h-11 items-center justify-center rounded-full px-5 text-sm font-semibold bg-[#0e3357] text-white hover:brightness-110 active:brightness-95 focus-visible:outline outline-2 outline-offset-2 outline-[#0e3357] transition"
        >
          See my work
        </a>
        <a
          href="/contact"
          class="inline-flex h-11 items-center justify-center rounded-full px-5 text-sm font-semibold border border-[var(--color-border)] hover:bg-[var(--surface-glass)] transition"
        >
          Contact
        </a>
      </div>

      <!-- Subtle scroll link to "My Experiences" (no layout changes elsewhere) -->
      <a
        href="#my-experiences"
        class="mt-9 inline-flex items-center justify-center gap-2 text-sm text-[var(--color-muted)] hover:text-[var(--color-text)] focus:outline-none focus:ring-2 focus:ring-[var(--color-border)]"
        aria-label="View my experience"
      >
        <svg class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
          <path fill-rule="evenodd" d="M5.23 7.21a.75.75 0 011.06.02L10 10.94l3.71-3.71a.75.75 0 111.06 1.06l-4.24 4.24a.75.75 0 01-1.06 0L5.21 8.29a.75.75 0 01.02-1.08z" clip-rule="evenodd"/>
        </svg>
        <span>View my experience</span>
      </a>
      <!-- Make sure your experiences section elsewhere on the page has: id="my-experiences" -->
    </div>
  </section>

  <!-- Experience placeholder target (only addition) -->
  <section id="my-experiences" class="scroll-mt-28 py-16 text-[var(--color-text)]">
    <div class="mx-auto max-w-3xl px-5">
      <h2 class="text-2xl sm:text-3xl font-bold tracking-tight">Experience</h2>
      <p class="mt-2 text-[var(--color-muted)]">
        Temporary placeholder content - replace with your real timeline when ready.
      </p>

      <!-- Simple placeholder list -->
      <ul class="mt-6 space-y-4 text-sm">
        <li>
          <strong>Role Title - Company</strong>
          <div class="text-[var(--color-muted)]">2024 - Present - Location</div>
          <div class="mt-1 text-[var(--color-muted)] opacity-90">One-two lines describing impact and scope.</div>
        </li>
        <li>
          <strong>Role Title - Company</strong>
          <div class="text-[var(--color-muted)]">2022 - 2024 - Location</div>
          <div class="mt-1 text-[var(--color-muted)] opacity-90">One-two lines describing impact and scope.</div>
        </li>
        <li>
          <strong>Role Title - Company</strong>
          <div class="text-[var(--color-muted)]">2018 - 2022 - Location</div>
          <div class="mt-1 text-[var(--color-muted)] opacity-90">One-two lines describing impact and scope.</div>
        </li>
      </ul>
    </div>
  </section>

  <!-- Smooth scroll (no visual style changes) -->
  <style is:global>
    html { scroll-behavior: smooth; }
  </style>
</BaseLayout>

