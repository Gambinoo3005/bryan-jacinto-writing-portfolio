---
import "../styles/global.css";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import Background from "../components/Background.astro";

interface Props {
  title?: string;
  description?: string;
  ogImage?: string;
}
const {
  title = "Bryan Jacinto â€” Copywriter & SEO",
  description = "UX & SEO writing portfolio.",
  ogImage = "/og/default.png",
} = Astro.props;
const url = Astro.url?.href ?? "";
---
<!doctype html>
<html lang="en" class="scroll-smooth">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <title>{title}</title>
    <meta name="description" content={description} />
    <link rel="canonical" href={url} />

    <!-- Open Graph / Twitter -->
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={ogImage} />
    <meta name="twitter:card" content="summary_large_image" />

    <!-- Fonts: Plus Jakarta Sans (variable) + Source Serif 4 (variable) -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link
      href="https://fonts.googleapis.com/css2?family=Plus+Jakarta+Sans:opsz,wght@14..32,300..800&family=Source+Serif+4:opsz,wght@8..60,300..800&display=swap"
      rel="stylesheet"
    />

    <!-- Early theme apply to avoid FOUC -->
    <script>
      (() => {
        const ls = localStorage.getItem("theme");
        const prefersDark = window.matchMedia("(prefers-color-scheme: dark)").matches;
        document.documentElement.classList.toggle(
          "dark",
          ls === "dark" || (!ls && prefersDark)
        );
      })();
    </script>
  </head>

  <!-- Normal document flow; viewport scroll bar stays as-is -->
  <body class="bg-white text-zinc-900 dark:bg-zinc-950 dark:text-zinc-100 antialiased min-h-svh flex flex-col">
    <!-- Site-wide layered background (z-0) -->
    <Background />

    <!-- Only the header is sticky -->
    <div class="sticky top-0 z-50 bg-white/80 dark:bg-zinc-950/80 backdrop-blur">
      <Header />
    </div>

    <!-- Page content scrolls with the viewport -->
    <main id="content" class="relative z-10 flex-1 px-5 sm:px-6">
      <slot />
    </main>

    <!-- Footer is NOT sticky -->
    <div class="relative z-10">
      <Footer />
    </div>
  </body>
</html>
